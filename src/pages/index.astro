---
import Layout from '../layouts/layout.astro';
---

<Layout>
	<section class="AboutMe">
		<div class="AboutText">
			<h1>
				Matt Lawhorn is a junior full-stack developer with interests in Javascript, web accessibility, and Geology
			</h1>
			<!-- <p>
				Everything will be done December 6th - wish me luck!
			</p> -->
		</div>
		<div class="AboutLinks">
			<a>Follow Me:</a>
			<a class="nostyle" target="_blank" href="https://github.com/Lawhornmatt">GitHub</a>
			<a class="nostyle" target="_blank" href="https://www.linkedin.com/in/matthew-lawhorn/">Linked In</a>
			<a></a>
		</div>
	</section>
</Layout>

<style>
	.AboutMe {
    min-height: 90vh;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
	}

	.AboutMe div {
		display: flex;
		flex-direction: column;
		/* justify-content: ; */
		align-items: center;
		
		/* width: auto; */
		/* width: 45vw; */
	}

	/* ==== AboutText ==== */

	.AboutText {
		justify-content: space-evenly;

		min-height: 88vh;
		width: 60vw;
	}

	.AboutText * {
		background-color: var(--brightspace);
		box-shadow: 0px 0px 25px 25px var(--brightspace);
		max-width: 85%;
		text-align: center;
	}

	.AboutText h1{
		text-align: left;
		font-size: 3rem;
	}

	/* ==== AboutLinks ==== */

	.AboutLinks {
		color: var(--greenspace);
		width: 30vw;
	}

	.AboutLinks a {
		background-color: var(--spltcmp2);
		border: groove;
		border-color: var(--spltcmp2);

		margin: .1rem 0 .1rem 0;
		/* padding-left: 1rem; */

		width: 80%;
		min-height: 10vh;
		font-size: large;
		
		transition: color 1s ease;

		display: flex;
		justify-content: center;
		align-items: center;
	}

	.AboutLinks a:hover {
		color: var(--triad);
	}

	.AboutLinks a:first-child {
		color: var(--triad);
		font-size: .875rem;
		font-family: 'Roboto Mono', monospace;
		text-indent: .75rem;
		justify-content: flex-start;
		min-height: 1rem;
		font-weight: 100;
		clip-path: polygon(100% 0, 100% 100%, 0 100%, 0 50%, 5% 0);
	}

	.AboutLinks a:last-child {
		min-height: 1rem;
		clip-path: polygon(100% 0, 100% 50%, 95% 100%, 0 100%, 0 0);
	}

	.AboutLinks a div {
		background-color: var(--spltcmp2-inlay);
	}

	/* ==== AboutPic ==== */

	.AboutPic {
		justify-content: center;
	}

	.AboutPic div {
		/* display: block; */
		border: solid;
		border-color: var(--spltcmp2);
	}

	/* ==== Image ==== */

	.idealIMG {
		display: block;
		max-height:75vh;
		width: auto;
		/* height: auto; */
	}

	.idealIMGsmol {
		display: block;
		max-height:25vh;
		width: auto;
		height: auto;
	}
</style>